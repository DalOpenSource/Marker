<% unless Course.all.empty? %>
<p>You are currently associated with the following courses.</p>

<% @courses.each do |course| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= link_to course, course %></h3>
    </div>
    <div class="panel-body">
      <p><%= course.description %></p>
      <p><em>Role(s)</em>:
        <% course.roles.where(user: current_user).each do |role| %>
        <span class="label label-primary"><%= role.title.humanize %></span> 
        <% end %>
      </p>
    </div>
  </div>
<% end %>
<% else %>
<div class="alert alert-info" role="alert">You are not associated with any courses.</div>
<% end %>